<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/child_margin_padding"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="@color/cardview_shadow_end_color">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/child_margin_padding"
    android:orientation="vertical">
    <TextView
        android:id="@+id/employee_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Azens Eklak"/>
    <TextView
        android:id="@+id/employee_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ishani Technology Pvt. Ltd"/>
    <TextView
        android:id="@+id/employee_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="25"/>
    <TextView
        android:id="@+id/employee_eye_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="b-w"/>

</LinearLayout>
</android.support.v7.widget.CardView>